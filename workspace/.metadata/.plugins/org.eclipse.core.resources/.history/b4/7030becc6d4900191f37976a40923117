package test01;

import java.util.Scanner;

public class Demo07 {
	public static void main(String[] args) {
		int a;
		long sum = 1;
		
		Scanner sc = new Scanner(System.in);
		System.out.println("输入一个数字 n：");
		
		a = sc.nextInt();
		System.out.println("n！ = " + fac(a));
	}
	
	
	public static long fac(int n) {
		long sum = 1;
		if (fac(n) == 1) {
			return fac(n);
		} else {
			sum = fac(n - 1) * fac(n - 2);
			return sum;
		}
	}
}
